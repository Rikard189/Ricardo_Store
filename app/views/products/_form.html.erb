<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :qty %>
    <%= f.number_field :qty %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :category_id %>
    <%= f.select :category_id, @categories.collect{|category| [category.name, category.id]}, {include_blank: true}%>
  </div>

  <div class="field">
    <%= f.label :product_type_id%>
    <%= f.select :product_type_id, @product_types.collect{|types| [types.name, types.id]}, {include_blank: true}%>
  </div>

  <div class="field">
    <%= f.label :vendor_id %>
    <%= f.select :vendor_id, @vendors.collect{|vendor| [vendor.name, vendor.id]}, {include_blank: true} %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
